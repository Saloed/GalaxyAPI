{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Stipendia response schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["stipends"],
  "properties": {
    "stipends": {
      "type": "array",
      "items" :{
        "type": "object",
        "additionalProperties": false,
        "required": ["ID","fromdate","todate","student","deletion_mark","ordernumber","orderdate","stipend_type","sum"],
        "properties": {
            "ID": {"type":"number"},
            "fromdate":{"type":"string"},
            "todate":{"type":"string"},
            "student":{"type":"number"},
            "deletion_mark":{"type":"number"},
            "ordernumber":{"type":"number"},
            "orderdate":{"type":"string" },
            "stipend_type":{
                "type":"object",
                "additionalProperties": false,
                "required": ["ID","val"],
                "properties": {
                    "ID":{"type":"number"},
                    "val":{"type":"string"}
                }
            },
            "sum":{
                "type":"object",
                "additionalProperties": false,
                "required": ["currency"],
                "properties":{
                    "currency":{"type": "string"},
                "val":{"type": "number"}
                }
            }  
         }            
        }
      }
    }
}
